<Window x:Class="HeartPC.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SplashScreen" Height="320" Width="320" WindowStyle="None" Background="Transparent" AllowsTransparency="True">
    <Grid>
        <Image Source="/loading.png" Stretch="Uniform"/>
        <ProgressBar Name="LoadingProgress" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="20" Foreground="White" Background="Transparent" Margin="0,244,0,0"/>
        <TextBlock Name="LoadingText" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="16" Foreground="White" Margin="0,0,0,20"/>
    </Grid>
</Window>
